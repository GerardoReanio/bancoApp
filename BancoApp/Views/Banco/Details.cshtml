@model BancoApp.Models.BancoModel

@{
    ViewData["Title"] = "Details";
}

<h2>Detalles del Banco</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.IdBanco)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IdBanco)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FechaRegistro)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Regresar</a>
</div>

<hr />
<h1>Sucursales</h1>

<table class="table table-responsive table-bordered table-striped">
    <tr>
        <th>Nombre</th>
        <th>Direccion</th>
        <th>Fecha Registro</th>
        <th>Operaciones</th>

    </tr>
    @foreach (var sucursal in ViewBag.sucursales)
    {
        <tr>
            <td>@sucursal.Nombre</td>
            <td>@sucursal.Direccion</td>
            <td>@sucursal.FechaRegistro</td>
           <td>
                <a class="btn btn-default btn-xs" href="#">Editar</a>
                <a class="btn btn-default btn-xs" href="#">Eliminar</a>
        </td>
        </tr>
    }
</table>



<a class="btn btn-primary btn-xs" href="@Url.Action("Create", "Sucursal", new {@id = @Model.IdBanco})">Crear nueva sucursal</a>
