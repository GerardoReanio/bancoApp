@model System.Data.DataTable
@{
    ViewData["Title"] = "Index";
}

<h1>Bancos </h1>
<table class="table table-responsive table-bordered table-striped" >
    <tr>
        <th>Nombre</th>
        <th>Direccion</th>
        <th>Fecha Registro</th>
        <th>Operaciones</th>

    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++) {
    <tr>
        <td>@Model.Rows[i][1]</td>
        <td>@Model.Rows[i][2]</td>
        <td>@Model.Rows[i][3]</td>
        <td>
            <a class="btn btn-default btn-xs" href="@Url.Action("Details", "Banco", new {@id=@Model.Rows[i][0]})">Detalle</a>
            <a class="btn btn-default btn-xs" href="@Url.Action("Edit", "Banco", new {@id=@Model.Rows[i][0]})">Editar</a>
            <a class="btn btn-default btn-xs" href="@Url.Action("Delete", "Banco", new {@id=@Model.Rows[i][0]})">Eliminar</a>
        </td>
    </tr>
    }
</table>

<a class="btn btn-primary btn-xs" href="@Url.Action("Create", "Banco")">Crear Nuevo Banco</a>
